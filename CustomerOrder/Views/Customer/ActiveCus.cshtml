@model IEnumerable<Customer>
@{
    ViewData["Title"] = "Active Customers";
}

<h1>Active Customrs </h1>

<table class=" table-bordered table-striped table-light table-responsive">
    <tr>
        <th>@Html.DisplayNameFor(m => m.CustomerId)</th>
        <th>@Html.DisplayNameFor(m => m.CustomerName)</th>
        <th>@Html.DisplayNameFor(m => m.Email)</th>
        <th>@Html.DisplayNameFor(m => m.Phone)</th>
        <th>Operations</th>
    </tr>
    <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <td>@customer.CustomerId</td>
                <td>
                    <a asp-action="OrderDetails"
                       asp-controller="Order"
                       asp-route-id="@customer.CustomerId">@customer.CustomerName </a>
                </td>
                <td>@customer.Email</td>
                <td>@customer.Phone</td>
                
                <td>
                    <a asp-action="Details"
                       asp-controller="Customer"
                       asp-route-id="@customer.CustomerId"
                       class="btn btn-outline-primary">Details  </a>
                </td>

            </tr>
        }
    </tbody>
</table>
